{
  "compilerOptions": {
    "incremental": true,
    "target": "es2019",
    "lib": ["es2019", "es2019.array"],
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
