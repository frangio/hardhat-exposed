{
  "name": "hardhat-exposed",
  "version": "0.1.0",
  "description": "Automatically expose internal functions for smart contract testing",
  "license": "MIT",
  "author": "Francisco Giordano <frangio.1@gmail.com>",
  "repository": "github:frangio/hardhat-exposed",
  "main": "dist/plugin.js",
  "files": [
    "/dist",
    "/src",
    "!*.test.{js,d.ts}{,.map}"
  ],
  "scripts": {
