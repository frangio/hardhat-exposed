    "@types/mocha": "^7.0.2",
    "@types/node": "^10.17.60",
    "ava": "^3.15.0",
    "ethers": "^5.3.0",
    "fgbg": "^0.1.5",
    "hardhat": "^2.3.0",
    "mocha": "^8.4.0",
    "rimraf": "^3.0.2",
    "solidity-ast": "^0.4.25",
    "typescript": "^4.3.2",
    "web3": "^1.3.6"
  },
  "peerDependencies": {
    "hardhat": "^2.3.0"
  }
